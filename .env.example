# .env.example
# This file contains example environment variables for the FastAPI Q&A Microservice.
# Copy this to a file named '.env' in the root directory and fill in your actual values.

# Database Configuration (PostgreSQL)
# For Docker Compose, 'db' is the service name for the PostgreSQL container.
# For local development, you might use 'localhost' or '127.0.0.1'.
DATABASE_URL="postgresql+asyncpg://user:password@db:5432/qna_db"
POSTGRES_USER="user"
POSTGRES_PASSWORD="password"
POSTGRES_DB="qna_db"
POSTGRES_HOST="db"
POSTGRES_PORT=5432

# Server Configuration
SERVER_HOST="0.0.0.0" # Listen on all interfaces
SERVER_PORT=8000      # Port for the FastAPI application

# Debug Mode (set to True for development, False for production)
DEBUG_MODE=True

# Secret Key (for future authentication/security, replace with a strong, random string)
SECRET_KEY="your_super_secret_key_here_replace_me"
